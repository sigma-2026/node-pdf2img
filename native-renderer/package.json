{
  "name": "pdf-renderer",
  "version": "0.1.0",
  "description": "High-performance PDF to WebP renderer using PDFium and NAPI-RS",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "pdf-renderer",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-apple-darwin"
      ]
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node",
    "libpdfium.so",
    "libpdfium.dylib",
    "pdfium.dll"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release && node scripts/copy-pdfium.js",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "LD_LIBRARY_PATH=. node test.mjs",
    "universal": "napi universal",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "license": "MIT"
}
