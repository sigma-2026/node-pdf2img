{
    "name": "node-pdf2img",
    "version": "0.1.0",
    "description": "High-performance PDF to image converter using PDFium native renderer",
    "type": "module",
    "main": "./src/index.js",
    "types": "./src/index.d.ts",
    "bin": {
        "pdf2img": "./bin/cli.js"
    },
    "exports": {
        ".": {
            "import": "./src/index.js",
            "types": "./src/index.d.ts"
        }
    },
    "files": [
        "src",
        "bin"
    ],
    "scripts": {
        "test": "node --test test/*.test.js",
        "test:run": "node test/api.test.js",
        "build:native": "cd ../native-renderer && npm run build",
        "prepublishOnly": "npm run test"
    },
    "keywords": [
        "pdf",
        "image",
        "converter",
        "pdfium",
        "webp",
        "native",
        "cli"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "os": [
        "linux",
        "darwin",
        "win32"
    ],
    "cpu": [
        "x64",
        "arm64"
    ],
    "dependencies": {
        "node-pdf2img-native": "file:../native-renderer",
        "commander": "^12.0.0",
        "cos-nodejs-sdk-v5": "^2.14.6",
        "dotenv": "^16.0.3",
        "ora": "^8.0.0",
        "p-limit": "^7.2.0",
        "piscina": "^5.1.4",
        "sharp": "^0.33.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0"
    },
    "bundleDependencies": [
        "node-pdf2img-native"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/your-username/node-pdf2img.git"
    },
    "bugs": {
        "url": "https://github.com/your-username/node-pdf2img/issues"
    },
    "homepage": "https://github.com/your-username/node-pdf2img#readme"
}
