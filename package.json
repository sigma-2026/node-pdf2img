{
  "name": "node-api-framework",
  "version": "1.0.0",
  "description": "A standard Node.js API framework using Express",
  "main": "app.js",
  "scripts": {
    "clean": "npm config set engine-strict true && rm -rf ./output",
    "start": "npm run clean && node --verbose --max-old-space-size=4096 --expose-gc app.js",
    "dev": "npm run clean && nodemon --verbose --max-old-space-size=8192 --legacy-watch --expose-gc app.js"
  },
  "dependencies": {
    "canvas": "^3.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^5.4.54"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "type": "module",
  "overrides": {
    "canvas": "^3.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}